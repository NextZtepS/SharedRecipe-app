rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      allow read: if true;
      allow write: if request.auth.uid == uid;
    }
    
    match /menus/{menuId=**} {
     	allow read: if true;
      allow update: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.uid
    }
  }
}